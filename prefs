
if [ -z "${HOMEKIT_SH_ENV_SET:-}" ]; then
    set -a
    . ./config/environment
    set +a
    
    if [ -f "${XDG_CONFIG_HOME:-$HOME/.config}/homekit.sh/environment" ]; then
        set -a
        . "${XDG_CONFIG_HOME:-$HOME/.config}/homekit.sh/environment"
        set +a
    fi

    export HOMEKIT_SH_ENV_SET=true
fi