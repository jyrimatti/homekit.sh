#! /usr/bin/env nix-shell
#! nix-shell -i dash -I channel:nixos-23.11-small -p dash nix jq yq yajsv findutils ncurses
. ./prelude
set -eu

logger_info 'Invoked: api/ui/accessories'
logger_trace 'api/ui/accessories'

ret="$(find "$HOMEKIT_SH_ACCESSORIES_DIR" -maxdepth 3 -name '*.toml' | xargs -I{} ./util/aid.sh {} | xargs -I{} echo '<div class="accessory"><div hx-get="accessory?aid={}" hx-trigger="load" hx-swap="outerHTML" handlebars-template="accessory"><div class="htmx-indicator"></div></div></div>')"

./util/respond.sh 200 "$ret" "text/html"